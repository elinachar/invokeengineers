<% content_for :title,  "Change Your Password - Invoke Engineers" %>
<%= content_for :facebook_meta_tags do %>
  <meta property="og:title" content="Change Your Password - Invoke Engineers" />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="<%= request.original_url %>" />
  <meta property="og:image" content="https://invokeengineers.com/meta-image-logo.png">
  <meta property="og:image:alt" content="Invoke Engineers" />
  <meta property="og:description" content="Invoke Engineers is a design, construction and renovation firm based on Kalamata that offers exclusive, functional and sustainable residences and workspaces." />
  <meta property="og:locale" content="en_US">
  <meta property="og:site_name" content="Invoke Engineers">
<% end %>
<%= content_for :twitter_meta_tags do %>
<meta name="twitter:title" content="Change Your Password - Invoke Engineers">
<meta name="twitter:description" content="Invoke Engineers is a design, construction and renovation firm based on Kalamata that offers exclusive, functional and sustainable residences and workspaces.">
<meta name="twitter:image" content="https://invokeengineers.com/meta-image-logo.png">
<% end %>

<div class="container-fluid user managing text-center">
  <div class="row">
    <div class="col-10 offset-1 card">
      <h2>Change your password</h2><br>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field">
          <%= f.label :password, "New password" %><br />
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
        </div><br>

        <div class="field">
          <%= f.label :password_confirmation, "Confirm new password" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div><br>

        <div class="actions">
          <%= f.submit "Change my password", class: "button submit" %>
        </div><br>
      <% end %>

      <%= link_to "Log in", new_session_path(resource_name), class: "button" %>
    </div>
  </div>
</div>
