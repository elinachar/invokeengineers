<%= form_with(model: team, local: true) do |form| %>
  <% if team.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(team.errors.count, "error") %> prohibited this team from being saved:</h2>

      <ul>
      <% team.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :first_name %><br>
    <%= form.text_field :first_name %>
  </div>

  <div class="field">
    <%= form.label :last_name %><br>
    <%= form.text_field :last_name %>
  </div>

  <div class="field">
    <%= form.label :proffession %><br>
    <%= form.text_field :proffession %>
  </div>

  <div class="field">
    <%= form.label :description %><br>
    <%= form.text_area :description, size: '5x8' %>
  </div>

  <div class="field">
    <%= form.label :image_url %><br>
    <div class="row w-100 m-0">
      <div class="col-6 text-left p-0">
        <%= form.file_field :image_url %>
      </div>
      <% if team.persisted? %>
        <div class="col-6 text-left">
          <%= image_tag team.image_url_url.to_s, class: "img-responsive", alt: team.image_url_url.to_s %>
        </div>
      <% end %>
    </div>

    <div class="field">
      <%= form.label "Gender (if image for user does not exist)" %>
      <% if team.gender == "female" %>
        <%= form.select :gender, options_for_select([['female', 'female'], ['male', 'male']]) %>
      <% else %>
        <%= form.select :gender, options_for_select([['male', 'male'], ['female', 'female']]) %>
      <% end %>
    </div></br>
  </div><br>

  <div class="actions">
    <% if team.persisted? %>
      <%= form.submit "Update Team Member", class: "button submit" %>
    <% else %>
      <%= form.submit "Create Team Member", class: "button submit" %>
    <% end %>
  </div><br>
<% end %>
