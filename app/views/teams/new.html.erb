  <div class="row">
    <div class="col-10 offset-1 card">
      <h1>New Team Member</h1><br>

      <div class="form">
        <%= render 'form', team: @team %>
      </div>

      <%= link_to 'Cancel creating new team member', teams_path, class: "button cancel" %>
    </div>
  </div>
</div>
