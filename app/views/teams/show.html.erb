<% content_for :title,  @team.first_name + " " +  @team.last_name +  " - Invoke Engineers" %>

<%= content_for :facebook_meta_tags do %>
  <meta property="og:title" content="<%= @team.first_name + " " +  @team.last_name +  " - Invoke Engineers" %>" />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="<%= request.original_url %>" />
  <% unless @team.image_url_url.to_s.empty? %>
    <meta name="image" content='<%= root_url + @team.image_url_url.to_s[1..-1] %>'/>
  <% else %>
    <meta property="og:image" content="https://invokeengineers.com/meta-image-logo.png">
  <% end %>
  <meta property="og:image:alt" content="Invoke Engineers" />
  <meta property="og:description" content="Invoke Engineers is a design, construction and renovation firm based on Kalamata that offers exclusive, functional and sustainable residences and workspaces." />
  <meta property="og:locale" content="en_US">
  <meta property="og:site_name" content="Invoke Engineers">
<% end %>

<%= content_for :twitter_meta_tags do %>
<meta name="twitter:title" content="<%= @team.first_name + " " +  @team.last_name +  " - Invoke Engineers" %>">
<meta name="twitter:description" content="Invoke Engineers is a design, construction and renovation firm based on Kalamata that offers exclusive, functional and sustainable residences and workspaces.">
<meta name="twitter:image" content="https://invokeengineers.com/meta-image-logo.png">
<% end %>

<div class="container-fluid team managing text-center">
  <div class="row">
    <div class="col-10 offset-1 card">
      <h1>Team Member</h1><br>
      <p>
        <div class="row">
          <div class="col-10 offset-1">
            <% unless @team.image_url_url.to_s.empty? %>
              <%= image_tag @team.image_url_url.to_s, class:"img-responsive w-50", alt: @team.first_name + @team.last_name %><br>
              <strong>Image url:</strong>
              <%= File.basename(@team.image_url_url.to_s)%>
            <% else %>
              <% if @team.gender == "male" %>
                <%= image_tag "male_user.png", class:"img-responsive w-50", alt: "male-user" %><br>
              <% else %>
                <%= image_tag "female_user.png", class:"img-responsive w-50", alt: "female-user" %><br>
              <% end %>
            <% end %>
          </div>
        </div>
      </p>

      <p>
        <strong>First name:</strong>
        <%= @team.first_name %>
      </p>

      <p>
        <strong>Last name:</strong>
        <%= @team.last_name %>
      </p>

      <p>
        <strong>Proffession:</strong>
        <%= @team.proffession %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= @team.description %>
      </p>

      <p>
        <strong>Gender:</strong>
        <%= @team.gender %>
      </p>

      <br>
      <div class="row">
        <div class="col-12 text-center">
          <%= link_to 'Edit team member', edit_team_path(@team), class: "button" %>
          <%= link_to 'Back to all team members', teams_path, class: "button" %>
          <%= link_to 'Delete team member', @team, method: :delete, data: { confirm: 'Are you sure that you want to delete this team member?' }, class: "button cancel" %>
        </div>
      </div>
    </div>
  </div>
</div>
