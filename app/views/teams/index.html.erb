<% content_for :title, "Team - Invoke Engineers" %>
<%= content_for :facebook_meta_tags do %>
  <meta property="og:title" content="Team - Invoke Engineers" />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="<%= request.original_url %>" />
  <meta property="og:image" content="https://invokeengineers.com/meta-image-logo.png">
  <meta property="og:image:alt" content="Invoke Engineers" />
  <meta property="og:description" content="Invoke Engineers is a design, construction and renovation firm based on Kalamata that offers exclusive, functional and sustainable residences and workspaces." />
  <meta property="og:locale" content="en_US">
  <meta property="og:site_name" content="Invoke Engineers">
<% end %>
<%= content_for :twitter_meta_tags do %>
<meta name="twitter:title" content="Team - Invoke Engineers">
<meta name="twitter:description" content="Invoke Engineers is a design, construction and renovation firm based on Kalamata that offers exclusive, functional and sustainable residences and workspaces.">
<meta name="twitter:image" content="https://invokeengineers.com/meta-image-logo.png">
<% end %>

<div class="container-fluid team managing text-center">
  <div class="row">
    <div class="col-10 offset-1 card">
      <h1>Invoke Engineers Team</h1><br>

      <div class="row">
        <% @teams.each do |team| %>
          <div class="col-12 col-sm-6">
            <%= link_to team, :action => 'go'  do %>
              <div class="team-card">
                <% unless team.image_url_url.to_s.empty? %>
                  <%= image_tag team.image_url_url.to_s, class:"img-responsive w-100", alt: team.first_name + team.last_name %><br>
                <% else %>
                  <% if team.gender == "male" %>
                    <%= image_tag "male_user.png", class:"img-responsive w-100", alt: "male-user" %><br>
                  <% else %>
                    <%= image_tag "female_user.png", class:"img-responsive w-100", alt: "female-user" %><br>
                  <% end %>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>

      <br>
      <%= link_to 'Create New Team Member', new_team_path, class: "button" %>
    </div>
  </div>
</div>
