<div class="container-fluid user managing text-center">
  <div class="row">
    <div class="col-10 offset-1 card">
      <h1>My Account</h1><br>
      <p>
        <strong>First name:</strong>
        <%= @user.first_name %>
      </p>

      <p>
        <strong>Last name:</strong>
        <%= @user.last_name %>
      </p>

      <% if current_user.admin? %>
        <p>
          <strong>Admin:</strong>
          <%= @user.admin %>
        </p>
      <% end %>

      <p>
        <strong>Editor:</strong>
        <%= @user.editor %>
      </p>

      <div class="row">
        <div class="col-12 text-center">
          <%= link_to 'Edit Account', edit_user_path(@user), class: "button" %>
          <% if current_user.admin? %>
            <%= link_to 'Go Back to all Users', users_path, class: "button" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
