<div class="container-fluid user managing text-center">
  <div class="row">
    <div class="col-10 offset-1 card">
      <h1>Users</h1><br>

      <table>
        <thead>
          <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>Admin</th>
            <th>Editor</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr class="spacer">
              <td><%= user.first_name %></td>
              <td><%= user.last_name %></td>
              <td><%= user.admin %></td>
              <td><%= user.editor %></td>
              <td><%= link_to 'Show', user, class: "link" %></td>
              <td><%= link_to 'Edit', edit_user_path(user), class: "link" %></td>
              <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure that you want to delete this user?' }, class: "link" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

    </div>
  </div>
</div>
