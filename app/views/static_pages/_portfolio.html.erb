<div class="container-fluid projects text-center" id="projects">
  <h1>Recent Projects</h1>
  <div class="row">
    <% @projects.each do |project| %>
      <div class="col-12 col-sm-6 col-lg-3">
        <%= link_to project, :action => 'go'  do %>
          <div class="project-card">
              <%= image_tag project.cover_image_url_url.to_s, class: "img-responsive", alt: project.name %>
              <p class="name"><%= project.name %></p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
